@page
@using MB.Domain.CommentAgg
@model MB.Presentation.MVCCore.Areas.Admin.Pages.CommentManagement.ListModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="float-left">Comment  List</h3>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Article</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comments in Model.Comments)
                {
                    <tr>
                        <td>@comments.Id</td>
                        <td>@comments.Name</td>
                        <td>@comments.Email </td>
                        <td>@comments.Message </td>
                        <td>@comments.Article </td>
                        <td>
                            @if (comments.Status==Statuses.New)
                            {
                                <i class="fa fa-eye fa-2x text-info "></i>
                            }
                            @if (comments.Status==Statuses.Confirmed)
                            {
                                <i class="fa fa-check fa-2x text-success"></i>
                            }
                            @if(comments.Status == Statuses.Canceled)
                            {
                                <i class="fa fa-close fa-2x text-danger"></i>
                            }
                        </td>
                        <td>@comments.CreationDate</td>
                        <td>
                            @if (comments.Status == Statuses.New)
                            {
                                <form method="post" asp-page-handler="Confirm" class="float-left">
                                    <button class="btn btn-success">Confirm</button>
                                    <input type="hidden" name="id" value="@comments.Id"/>
                                </form>
                                <form method="post" asp-page-handler="Cancel" class="float-left">
                                    <button class="btn btn-danger">Cancel</button>
                                    <input type="hidden" name="id" value="@comments.Id"/>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>